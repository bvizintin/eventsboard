<% provide(:title, @tag.name) %>

<header>
  <h1 class="text-uppercase"><%= @tag.name %></h1>
</header>



  <div class="row">
    <div class="col-sm-3 offset-md-10">
      <div class="sidebar">
        <h3 class="discover">Discover</h3>
        <ul class="nav nav-pills nav-stacked">
          <li class="<%= "active" if current_page?("/events") %>"> <%= link_to "ALL EVENTS", events_path %> </li>
        </ul>
        <% @categories.each do |category| %>
          <ul class="nav nav-pills nav-stacked">
            <li class="<%= "active" if current_page?("/categories/#{category.id}") %>"><%= link_to category.name, category_path(category) %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <% @tag.events.each do |event| %>
    <% if event.category == @category %>
      <div class="col-sm-9 pull-left">
        <%= link_to event_path(event) do %>
        <div class="events">
          <div class="row">
            <div class="col-sm-3">
              <%= image_tag event.image.url, class: "event-image", height: 100, width: 200 if event.image %>
            </div>
            <div class="col-sm-9">
              <h3 class="event-title"><%= event.title %></h3>
              <p>
                <span class="event-venue"> <%= event.venue  %> - <strong><%= event.location %></strong></span>
              </p>
              <p class="lead-time">
                <span class="event-start"><%= event.start_date.strftime("%e %b %Y %H:%M:%S%p") %></span> <span class="pull-right">Organized by: <%= event.organizer.username %> | <%= event.organizer.organization_name %> </span>
              </p>
            </div>
          </div>

        </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
