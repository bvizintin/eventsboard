<% provide(:title, @category.name) %>

<header>
  <h1 class="text-uppercase"><%= @category.name %> Events</h1>

  <ul class="actions">
    <% admins_only do %>
      <li><%= link_to "Edit", edit_admin_category_path(@category), class: "edit" %> | <%= link_to "Delete", admin_category_path(@category), method: :delete, data: {confirm: "Sure?"}, class: "delete" %></li>
    <% end %>
  </ul>
</header>



  <div class="row">
    <div class="col-sm-3 offset-md-10">
      <div class="sidebar">
        <h3 class="discover">Discover</h3>
        <ul class="nav nav-pills nav-stacked">
          <li class="<%= "active" if current_page?("/events") %>"> <%= link_to "ALL EVENTS", events_path %> </li>
        </ul>
        <% @categories.each do |category| %>
          <ul class="nav nav-pills nav-stacked">
            <li class="<%= "active" if current_page?("/categories/#{category.id}") %>"><%= link_to category.name, category_path(category) %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
