<header>
  <h1>All Attendances</h1>
</header>

<table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Attendee</th>
        <th>Event</th>
        <th>Seats Left</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |att|%>
        <tr>
          <td><%= att.attendee.full_name %></td>
          <td><%= att.attended_event.title %></td>
          <td><%= att.attended_event.seats_left %></td>
        </tr>
      <% end %>
    </tbody>

</table>
